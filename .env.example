# =============================================================================
# SportsMatch Tokyo - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values

# =============================================================================
# Supabase (Required)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# Database (Required)
# =============================================================================
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# Email - Resend (Required for email features)
# =============================================================================
RESEND_API_KEY=re_your_api_key
EMAIL_FROM=SportsMatch Tokyo <noreply@sportsmatch.tokyo>

# =============================================================================
# Redis - Upstash (Required for production rate limiting)
# =============================================================================
# Get these from https://console.upstash.com/redis
# Without these, rate limiting falls back to in-memory (not suitable for production)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# =============================================================================
# Cron Jobs (Required for scheduled tasks)
# =============================================================================
CRON_SECRET=your-random-secret-for-cron-jobs

# =============================================================================
# App Configuration
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_VERSION=1.0.0

# =============================================================================
# Optional - Analytics & Monitoring
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
